# Gemini API 설정
GEMINI_API_KEY=your_gemini_api_key_here
# Gemini 모델명 (선택, 기본값: gemini-2.5-flash-lite)
GEMINI_MODEL=gemini-2.5-flash-lite

# Hugging Face 설정 (선택사항, 공개 모델은 토큰 없이도 다운로드 가능)
HF_TOKEN=your_huggingface_token_here

# 데이터베이스
DATABASE_PATH=./data/chatbot.db

# ChromaDB
CHROMA_PERSIST_DIR=./data/chroma

# RAG 인덱싱(워커) 동작
# - true: 인덱싱 전에 컬렉션을 비우고 재구축(개발/학습용 권장)
# - false: 기존 컬렉션 유지 + upsert
RAG_CLEAR_COLLECTION_ON_INDEX=true

# 서버 설정
HOST=0.0.0.0
PORT=8000

